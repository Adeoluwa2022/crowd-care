{
  "hosting": {
    "public": "build", // The directory that contains your built app.
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html" // Ensures single-page app routing.
      }
    ]
  }
}